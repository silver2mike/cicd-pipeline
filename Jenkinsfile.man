
pipeline {
	agent {label 'ubuntu-runner'}
	parameters {
		choice(name: "CHOICE", choices: ["main", "dev"], description: "Branch")
		string(name: "TAG", defaultValue: "v1.0", trim: false, description: "Docker image tag")
  	}

  	stages {
		stage('Main Deploy') {
			when {
       	    			expression { 
       		 			return params.CHOICE == 'main'
				}
        		}	

    			steps {
                		sh '''
					if [[ -n $(docker ps -aq --filter ancestor=nodemain:$params.TAG) ]]; then
						docker ps -aq --filter ancestor=nodemain:$params.TAG | xargs docker rm -f
					fi
					docker run -d -p 3000:3000 --expose 3000 nodemain:$params.TAG
	  			'''
			}
     		}
		stage('Dev Deploy') {
			when {
       	    			expression { 
       		 			return params.CHOICE == 'dev'
				}
        		}
			steps {
				sh '''
					if [[ -n $(docker ps -aq --filter ancestor=nodedev:$params.TAG) ]]; then
						docker ps -aq --filter ancestor=nodedev:$params.TAG | xargs docker rm -f
					fi
					docker run -d --expose 3001 -p 3001:3000 nodedev:$params.TAG
				'''
   			}
		}
	}
}		
